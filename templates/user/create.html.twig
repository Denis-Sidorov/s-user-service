{% extends 'base.html.twig' %}

{% block title %}
    Create user
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="https://unpkg.com/js-datepicker/dist/datepicker.min.css">
{% endblock %}

{% block body %}
    <h1>Create User</h1>
    <form action="{{ path('user_store') }}" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="birth_date">Birth Date</label>
            <input type="text" name="birth_date_picker" id="birth_date_picker" class="form-control">
            <input type="hidden" name="birth_date" id="birth_date">
        </div>
        <div class="form-group">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-light active">
                    <input type="radio" name="gender" id="gender_male" checked>Male
                </label>
                <label class="btn btn-light">
                    <input type="radio" name="gender" id="gender_female">Female
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="address" id="address" class="form-control">
        </div>
        <button class="btn btn-success" type="submit">Create</button>
    </form>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('scripts/user/create-bundle.js') }}"></script>
{% endblock %}